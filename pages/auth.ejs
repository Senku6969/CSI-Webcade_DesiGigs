 <script>
    document.addEventListener('DOMContentLoaded', function () {
    const switch_role = document.getElementById('switch');
    const Client = document.querySelector('.Client_container');
    const Client_heading = document.querySelector('.Client_Heading');
    const Freelancer_container = document.querySelector('.Freelancer_container');
    const Freelancer_Heading = document.querySelector('.Freelancer_Heading');
    const body = document.querySelector('body'); // Get the body element
    
    const container = document.getElementById('container');
    
    // Toggle between Freelancer and Client containers
    switch_role.addEventListener('click', (e) => {
        e.preventDefault();

        if (Freelancer_container.style.display === 'none') {
            Freelancer_container.style.display = 'block';
            Freelancer_Heading.style.display = 'block';
            Client.style.display = 'none';
            Client_heading.style.display = 'none';
            switch_role.textContent = "Switch To Client Login";
            
            // Change background for Freelancer
            body.style.background = 'linear-gradient(135deg, #c9d6ff, #202e5c)';
        } else {
            Freelancer_container.style.display = 'none';
            Freelancer_Heading.style.display = 'none';
            Client.style.display = 'block';
            Client_heading.style.display = 'block';
            switch_role.textContent = "Switch To Freelancer Login";
            
            // Change background for Client
            body.style.background = 'linear-gradient(135deg, #202e5c, #c9d6ff)';
        }
        
        // Reapply event listeners after toggling
        reapplyEventListeners();
    });

    function reapplyEventListeners() {
        const registerButton = document.getElementById('registerButton');
        const signInButton = document.getElementById('signInButton');
        const registerForm = document.querySelector('.form-container.sign-up form');
        const signInForm = document.querySelector('.form-container.sign-in form');

        // Toggle between sign up and sign in forms
        const registerbtn = document.getElementById('register');
        const loginbtn = document.getElementById('login');

        if (registerbtn && loginbtn) {
            registerbtn.addEventListener('click', () => {
                container.classList.add("active");
            });

            loginbtn.addEventListener('click', () => {
                container.classList.remove("active");
            });
        }

        if (registerButton) {
            registerButton.addEventListener('click', function (event) {
                handleFormSubmit(event, registerForm);
            });
        }

        if (signInButton) {
            signInButton.addEventListener('click', function (event) {
                handleFormSubmit(event, signInForm);
            });
        }

        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(item => {
            item.addEventListener('click', function () {
                const passwordField = this.previousElementSibling;

                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    this.classList.remove("fa-eye-slash");
                    this.classList.add("fa-eye");
                } else {
                    passwordField.type = "password";
                    this.classList.remove("fa-eye");
                    this.classList.add("fa-eye-slash");
                }
            });
        });
    }

    // Initial event listeners setup
    reapplyEventListeners();
});

 </script>


