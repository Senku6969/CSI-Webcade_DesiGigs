    <script>
        const categories = [
            "Web Development",
            "Graphic Design",
            "Content Writing",
            "Digital Marketing",
            "App Development",
            "Finance and Accounting",
            "Game Development",
            "Video and Audio Production"
        ];

        const posts = [
            {
                id: 1,
                content: "Just finished a responsive web design project using Tailwind CSS. It's amazing how quickly you can build beautiful interfaces!",
                category: "Web Development",
                author: "WebDev123",
                likes: 15,
                dislikes: 2
            },
            {
                id: 2,
                content: "Created a stunning logo for a tech startup. The key was to keep it simple yet memorable.",
                category: "Graphic Design",
                author: "DesignGuru",
                likes: 22,
                dislikes: 1
            },
            {
                id: 3,
                content: "SEO tip: Focus on creating high-quality, relevant content. Google's algorithms are getting smarter at recognizing value.",
                category: "Digital Marketing",
                author: "SEOmaster",
                likes: 18,
                dislikes: 3
            }
        ];

        let currentCategory = "all";

        function populateCategories() {
            const categoryList = document.getElementById('category-list');
            const postCategory = document.getElementById('post-category');

            categories.forEach(category => {
                categoryList.innerHTML += `
                    <li>
                        <a href="#" class="text-muted-foreground hover:text-primary transition duration-300 category-link" data-category="${category}">${category}</a>
                    </li>
                `;
                postCategory.innerHTML += `
                    <option value="${category}">${category}</option>
                `;
            });

            // Add event listeners to category links
            document.querySelectorAll('.category-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    currentCategory = e.target.dataset.category;
                    populatePosts();
                    updateActiveCategory();
                });
            });
        }

        function updateActiveCategory() {
            document.querySelectorAll('.category-link').forEach(link => {
                if (link.dataset.category === currentCategory) {
                    link.classList.remove('text-muted-foreground');
                    link.classList.add('text-primary', 'font-semibold');
                } else {
                    link.classList.remove('text-primary', 'font-semibold');
                    link.classList.add('text-muted-foreground');
                }
            });
        }

        function createPostElement(post) {
            return `
                <div class="bg-card text-card-foreground rounded-lg shadow-md p-6 mb-4 transition duration-300 hover:shadow-lg">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="font-semibold text-lg">${post.author}</h3>
                            <p class="text-sm text-muted-foreground">${post.category}</p>
                        </div>
                        <button class="text-muted-foreground hover:text-foreground transition duration-300">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                    </div>
                    <p class="mb-4">${post.content}</p>
                    <div class="flex space-x-4">
                        <button class="text-muted-foreground hover:text-primary transition duration-300 flex items-center like-button" data-post-id="${post.id}">
                            <i class="far fa-thumbs-up mr-1"></i> <span class="like-count">${post.likes}</span>
                        </button>
                        <button class="text-muted-foreground hover:text-destructive transition duration-300 flex items-center dislike-button" data-post-id="${post.id}">
                            <i class="far fa-thumbs-down mr-1"></i> <span class="dislike-count">${post.dislikes}</span>
                        </button>
                    </div>
                </div>
            `;
        }

        function populatePosts() {
            const postsContainer = document.getElementById('posts-container');
            postsContainer.innerHTML = '';
            const filteredPosts = currentCategory === "all"
                ? posts
                : posts.filter(post => post.category === currentCategory);
            filteredPosts.forEach(post => {
                postsContainer.innerHTML += createPostElement(post);
            });

            // Add event listeners for like and dislike buttons
            document.querySelectorAll('.like-button, .dislike-button').forEach(button => {
                button.addEventListener('click', handleLikeDislike);
            });
        }

        function handleLikeDislike(e) {
            const postId = parseInt(e.currentTarget.dataset.postId);
            const isLike = e.currentTarget.classList.contains('like-button');
            const post = posts.find(p => p.id === postId);

            if (isLike) {
                post.likes++;
            } else {
                post.dislikes++;
            }

            // Update the UI
            const countElement = e.currentTarget.querySelector(isLike ? '.like-count' : '.dislike-count');
            countElement.textContent = isLike ? post.likes : post.dislikes;
        }

        document.getElementById('post-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const content = document.getElementById('post-content').value;
            const category = document.getElementById('post-category').value;
            if (content.trim() !== '') {
                const newPost = {
                    id: posts.length + 1,
                    content: content,
                    category: category,
                    author: "CurrentUser",
                    likes: 0,
                    dislikes: 0
                };
                posts.unshift(newPost);
                populatePosts();
                document.getElementById('post-content').value = '';
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            populateCategories();
            populatePosts();
            updateActiveCategory();
        });
    </script>
