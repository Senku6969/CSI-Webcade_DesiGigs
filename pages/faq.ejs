faqContainer.addEventListener('click', (e) => {
    const toggle = e.target.closest('.faq-toggle');
    if (toggle) {
        const index = parseInt(toggle.dataset.index);
        const answer = toggle.nextElementSibling;
        const chevron = toggle.querySelector('.chevron');

        // Close all other answers
        document.querySelectorAll('.faq-answer').forEach((el, i) => {
            if (i !== index) {
                el.classList.add('hidden');
                el.previousElementSibling.querySelector('.chevron').style.transform = 'rotate(0deg)';
            }
        });

        // Toggle the clicked answer
        answer.classList.toggle('hidden');
        chevron.style.transform = answer.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
    }
});
