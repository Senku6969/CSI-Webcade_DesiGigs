        <script>
            // code for newsletter bakchodi 
            document.getElementById('newsletterForm').addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent the form from submitting
                
                const emailInput = document.getElementById('emailInput').value;
                const message = document.getElementById('message');
                
                if (emailInput.includes('@')) {
                    message.textContent = "Thank you for subscribing to our newsletter!";
                    message.style.color = 'white'; // Optional: set the message color to green for success
                } else {
                    message.textContent = "Error: '@' is missing in the email address.";
                    message.style.color = 'red'; // Optional: set the message color to red for error
                }
            });
    
    
